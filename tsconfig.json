{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["app/components/*"],
      "@/layouts/*": ["app/layouts/*"],
      "@/data/*": ["app/data/*"],
      "@/styles/*": ["app/styles/*"],
      "@/context/*": ["app/context/*"],
      "@/types/*": ["app/types/*"],
      "@/features/*": ["app/features/*"],
      "@/lib/*": ["app/lib/*"],
      "@/config/*": ["app/config/*"],
      "@/config": ["app/config/index"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
